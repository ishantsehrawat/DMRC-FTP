    <style>
        * {
            padding: 0%;
            margin: 0;
            box-sizing: border-box;
        }
        body {
            display: grid;
            place-items: center;
            font-family: 'Roboto', sans-serif;
            overflow: hidden;
            margin: 0vw 10vw 0vw 10vw;
        }
        header {
            width: 100vw;
            display: flex;
            align-items: center;
            padding-top: 5vh;
            /* justify-content: space-around; */
            height: 10vh;
        }
        form {
            display: flex;
            flex-direction: column;
            height: 40vh;
            margin-left: -25vw;
            margin-top: 20vh;
            width: 50vw;
            justify-content: space-around;
            align-items: center;
        }
        .chooseFile {
            margin: 10px;
            padding: 2rem 1.5rem;
            font: 1rem/1.5 "PT Sans", Arial, sans-serif;
            color: #5a5a5a;
            display: flex;
            flex-direction: column;
            color: white;
            z-index: -1;
        }
        /* .chooseFile,
        .chooseFile:before,
